<!-- Validation failure messages -->
<% if @actor.errors.any? %>
  <% @actor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_actor/<%= @actor.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for movies_id -->
      <div class="form-group">
        <label for="movies_id" class="control-label">
          Movies
        </label>

        <input type="text" id="movies_id" name="movies_id" placeholder="Movies" class="form-control" value="<%= @actor.movies_id %>">
      </div>

      <button class="btn btn-warning">
        Update Actor
      </button>
      or
      <a href="/actors/<%= @actor.id %>">Cancel</a>
    </form>
  </div>
</div>
